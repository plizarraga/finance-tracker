<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Transactions</h1>
    <div>
      <%= render "transactions/filter_form" %>
    </div>
  </div>
  <div>
    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-bold mb-6">Transactions</h1>
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <%= turbo_frame_tag "transactions", data: { turbo_action: "advance"} do %>
              <%== pagy_nav(@pagy) %>
              <%= render "transactions/table", transactions: @transactions %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
  </div>
</div>
