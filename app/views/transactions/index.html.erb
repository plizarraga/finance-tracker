    <div class="container mx-auto py-8">
      <h1 class="text-3xl font-bold mb-6">Transactions</h1>
      <!-- Totales de Expenses e Incomings -->
      <div class="flex justify-between items-center mb-4">
        <div class="text-red-600">
          <h2 class="text-xl font-semibold">Total Expenses: <%= number_to_currency(@total_expenses) %></h2>
        </div>
        <div class="text-green-600">
          <h2 class="text-xl font-semibold">Total Incomings: <%= number_to_currency(@total_incomings) %></h2>
        </div>
      </div>
      <!-- Filtros por rango de fechas -->
      <div class="mb-4 flex justify-between items-center">
        <%= form_tag transactions_path, method: :get, class: "flex items-center" do %>
          <label for="start_date" class="mr-2">From:</label>
          <%= date_field_tag :start_date, params[:start_date], class: "border rounded py-1 px-2" %>
          <label for="end_date" class="ml-4 mr-2">To:</label>
          <%= date_field_tag :end_date, params[:end_date], class: "border rounded py-1 px-2" %>
          <%= submit_tag "Filter", class: "ml-4 bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded" %>
        <% end %>
      </div>
      <!-- Tabla de transacciones -->
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Account</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @transactions.each do |transaction| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= transaction.date.strftime("%Y-%m-%d") %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= link_to transaction.title, edit_transaction_path(transaction) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= number_to_currency(transaction.amount) %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <% if transaction.transaction_type == 'income' %>
                        <span class="inline-block px-2 py-1 font-semibold leading-tight text-green-800 bg-green-200 rounded-full">Income</span>
                      <% else %>
                        <span class="inline-block px-2 py-1 font-semibold leading-tight text-red-800 bg-red-200 rounded-full">Expense</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.account.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= transaction.category.name %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
